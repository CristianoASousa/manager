			        <NumericContent value="12" withMargin="false"  valueColor="Critical" />
		        </TileContent>
	        </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Funcionarios Contaminados"  press="press">
		        <TileContent>
			        <NumericContent value="25" withMargin="false" valueColor="Critical"/>
		        </TileContent>
	        </GenericTile>
             <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Casos ativos "  press="press">
		        <TileContent>
			        <NumericContent value="25" withMargin="false" valueColor="Critical"/>
		        </TileContent>
	        </GenericTile>
            <!--Cards de quantidade por setor-->
            <ToolbarSpacer ></ToolbarSpacer>
             <Title text="Casos por setor:" level="H3" class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
             <ToolbarSpacer ></ToolbarSpacer>     
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop " header="Recursos Humanos"  press="press" >
		        <TileContent>
			        <NumericContent value="10"  withMargin="false" valueColor="Critical"/>
		        </TileContent>
	        </GenericTile>                          
	        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Financeiro"  press="press">
		        <TileContent>
			        <NumericContent value="12" withMargin="false" valueColor="Critical"/>
		        </TileContent>
	        </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Projetos "  press="press">
		        <TileContent>
			        <NumericContent value="25" withMargin="false" valueColor="Critical"/>
		        </TileContent>
	        </GenericTile>
        </content>
        <footer>
			<OverflowToolbar>
                <ToolbarSpacer/>
				<Button icon = "sap-icon://activity-items" text="Listagem" type="Emphasized" press="onNavListagem" />
			</OverflowToolbar>
		</footer>
    </Page>		
</mvc:View>